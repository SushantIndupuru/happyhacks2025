---
interface Props {
  quote: string;
  author: string;
  role?: string;
  image?: string;
}

const { 
  quote, 
  author, 
  role = "Teen", 
  image = "https://images.pexels.com/photos/1642228/pexels-photo-1642228.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
} = Astro.props;
---

<div class="bg-white rounded-xl shadow-md p-6 animate-on-scroll">
  <div class="text-primary-400 mb-4">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="currentColor" viewBox="0 0 24 24">
      <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
    </svg>
  </div>
  
  <blockquote class="text-neutral-700 mb-6">
    {quote}
  </blockquote>
  
  <div class="flex items-center">
    <div class="mr-4">
      <img 
        src={image} 
        alt={author}
        class="w-10 h-10 rounded-full object-cover"
      />
    </div>
    <div>
      <div class="font-medium text-neutral-800">{author}</div>
      {role && <div class="text-sm text-neutral-500">{role}</div>}
    </div>
  </div>
</div>