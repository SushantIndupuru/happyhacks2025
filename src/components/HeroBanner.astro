---
interface Props {
  title: string;
  subtitle: string;
  ctaText?: string;
  ctaLink?: string;
  secondaryCtaText?: string;
  secondaryCtaLink?: string;
  imageSrc?: string;
  imageAlt?: string;
}

const { 
  title, 
  subtitle, 
  ctaText, 
  ctaLink = "/learn", 
  secondaryCtaText, 
  secondaryCtaLink = "/resources",
  imageSrc = "https://images.pexels.com/photos/1198171/pexels-photo-1198171.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
  imageAlt = "Teens supporting each other"
} = Astro.props;
---

<section class="relative overflow-hidden bg-gradient-to-br from-primary-600/90 to-secondary-700/90 text-white">
  <!-- Background image with overlay -->
  <div class="absolute inset-0 z-0">
    <img 
      src={imageSrc} 
      alt={imageAlt} 
      class="w-full h-full object-cover object-center opacity-20"
      loading="eager"
    />
  </div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 md:py-28 lg:py-32 relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <div class="animate-on-scroll">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight">
          {title}
        </h1>
        <p class="mt-6 text-lg md:text-xl text-white/90 max-w-2xl">
          {subtitle}
        </p>
        
        <div class="mt-8 flex flex-wrap gap-4">
          {ctaText && (
            <a 
              href={ctaLink} 
              class="inline-block px-6 py-3 bg-white text-primary-700 rounded-full font-medium shadow-lg hover:shadow-xl transition-all transform hover:-translate-y-1"
            >
              {ctaText}
            </a>
          )}
          
          {secondaryCtaText && (
            <a 
              href={secondaryCtaLink} 
              class="inline-block px-6 py-3 bg-transparent border-2 border-white text-white rounded-full font-medium hover:bg-white/10 transition-colors"
            >
              {secondaryCtaText}
            </a>
          )}
        </div>
      </div>
      
      <div class="lg:flex justify-end hidden">
        <div class="w-full max-w-md relative animate-on-scroll">
          <div class="absolute -inset-1 bg-white/20 rounded-2xl blur-xl"></div>
          <div class="relative bg-white/30 backdrop-blur-md rounded-2xl p-6 shadow-xl border border-white/40">
            <div class="flex items-center space-x-4 mb-4">
              <div class="w-10 h-10 rounded-full bg-accent-400 flex items-center justify-center text-white">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                </svg>
              </div>
              <h3 class="font-semibold text-lg">Need to talk?</h3>
            </div>
            <p class="mb-4 text-white/90">If you're in crisis or need immediate support:</p>
            <div class="bg-white/80 backdrop-blur rounded-xl p-4 text-neutral-800">
              <div class="font-bold text-lg text-center mb-2">Text HOME to 741741</div>
              <p class="text-sm text-center">Free, 24/7 Crisis Counseling</p>
            </div>
            <div class="mt-4 text-center">
              <a href="/get-help" class="text-sm font-medium hover:underline">See more resources &rarr;</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Wave divider -->
  <div class="absolute bottom-0 left-0 right-0">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 100" fill="#ffffff" preserveAspectRatio="none" class="w-full h-8 sm:h-16 lg:h-24">
      <path d="M0,32L60,42.7C120,53,240,75,360,74.7C480,75,600,53,720,48C840,43,960,53,1080,58.7C1200,64,1320,64,1380,64L1440,64L1440,100L1380,100C1320,100,1200,100,1080,100C960,100,840,100,720,100C600,100,480,100,360,100C240,100,120,100,60,100L0,100Z"></path>
    </svg>
  </div>
</section>