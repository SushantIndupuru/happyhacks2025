---
interface Props {
  title: string;
  subtitle?: string;
  primaryText?: string;
  primaryLink?: string;
  secondaryText?: string;
  secondaryLink?: string;
  bgColor?: string;
}

const { 
  title, 
  subtitle, 
  primaryText = "Get Support Now", 
  primaryLink = "/get-help", 
  secondaryText = "Learn More", 
  secondaryLink = "/resources",
  bgColor = "bg-primary-600"
} = Astro.props;
---

<section class={`py-16 ${bgColor} text-white`}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-3xl md:text-4xl font-bold mb-4 animate-on-scroll">{title}</h2>
    {subtitle && <p class="text-xl text-white/90 max-w-3xl mx-auto mb-8 animate-on-scroll">{subtitle}</p>}
    
    <div class="flex flex-wrap justify-center gap-4 animate-on-scroll">
      <a 
        href={primaryLink} 
        class="px-6 py-3 bg-white text-primary-700 rounded-full font-medium shadow-lg hover:shadow-xl transition-all transform hover:-translate-y-1"
      >
        {primaryText}
      </a>
      <a 
        href={secondaryLink} 
        class="px-6 py-3 bg-transparent border-2 border-white text-white rounded-full font-medium hover:bg-white/10 transition-colors"
      >
        {secondaryText}
      </a>
    </div>
  </div>
</section>